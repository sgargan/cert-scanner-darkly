{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Cert Scanner",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cert-scanner/main.go",
            "args": [
                "scan",
                "-d",
                "-c", "${workspaceFolder}/example/config.yaml"
            ]
        },
        {
            "name": "Run Canary",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cert-scanner/main.go",
            "args": [
                "canary",
                "-d",
                "-c", "${workspaceFolder}/example/config.yaml"
            ]
        }
    ]
}